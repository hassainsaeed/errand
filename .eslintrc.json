{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "global-require": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
      "object-shorthand": "off",
      "prefer-destructuring": "off",
      "no-await-in-loop": "off",
      "no-loop-func": "off",
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsForRegex": ["new([a-zA-Z]*)Params"] }]
    }
}
